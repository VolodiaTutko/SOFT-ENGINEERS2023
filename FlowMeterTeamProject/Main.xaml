        <Grid Name="Log_in" Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="67" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            <Border  CornerRadius="18" BorderThickness="4" BorderBrush="#FF2196F3" Height="NaN" Width="NaN" >
                <Border.Background>
                    <SolidColorBrush Color="#FF131313" Opacity="0.1"/>
                </Border.Background>
                <StackPanel Margin="20">

                    <StackPanel Orientation="Horizontal" Margin="10 0 10 10" HorizontalAlignment="Center">
                        <TextBlock Text="Welcome" Foreground="#FF2196F3" FontSize="29" RenderTransformOrigin="2.556,1.057" />
                    </StackPanel>

                    <TextBox x:Name="textlogin" Template="{StaticResource TextBoxLogin}" Margin="150 50 150 15"  />
                    <TextBox x:Name="textpassword" Template="{StaticResource TextBoxPassword}" Margin="150 10 150 25"  />

                    <StackPanel Orientation="Horizontal" Margin="0 40 0 10" >
                        <TextBlock Text="Aren`t you registered yet? " FontSize="15" Margin="70 5 0 0" Foreground="#FF929DA9" FontWeight="Bold"   />
                        <Label Content="Register" >
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="#FF2196F3"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Margin" Value="0,0,15,0"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="FontWeight" Value="Thin"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="#FF001794"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                        <ContentControl x:Name="MainLoginControler">
                            <Button Content = "Login" FontSize="17" Margin="170,0,0,0" Click="SwitchToMain_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#FF2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="15"
                                                        Padding="0"
                                                        BorderThickness="0"
                                                        
                                                        Margin="5" 
                                                        Height="30"
                                                        Width="150">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#252525"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        </ContentControl>

                    </StackPanel>


                </StackPanel>
            </Border>



        </Grid>

        <Grid Grid.Row="3"   Background="#FF2196F3" Grid.ColumnSpan="2" Width="NaN">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />

            </Grid.RowDefinitions>


        </Grid>
    </Grid>
